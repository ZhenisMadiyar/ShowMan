<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/lay_filtr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/buttonResult"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imageViewProfile"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentTop="true"/>

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageViewProfile"
                    android:layout_marginTop="10dp"
                    android:hint="Имя"
                    android:layout_toLeftOf="@+id/button3"
                    android:layout_toStartOf="@+id/button3" />
                <View
                    android:id="@+id/viewName"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/editTextName"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />


                <TextView
                    android:id="@+id/textViewCat"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewName"
                    android:layout_centerHorizontal="true"
                    android:text="Категория"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000" />

                <Spinner
                    android:id="@+id/spinnerCategory"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/textViewCat"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/holo_blue_light" />

                <View
                    android:id="@+id/viewCat"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/spinnerCategory"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />


                <TextView
                    android:id="@+id/textView5"
                    android:layout_below="@+id/viewCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Регион"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000" />

                <Spinner
                    android:id="@+id/spinnerRegion"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/textView5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/holo_blue_light" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/spinnerRegion"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Язык ведения"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000" />

                <com.example.madiyarzhenis.showman.MultiSpinner
                    android:id="@+id/spinnerLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/textView6"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/holo_blue_light" />

                <View
                    android:id="@+id/viewLanguage"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/spinnerLanguage"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/textData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/viewLanguage"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Опыт работы"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000" />

                <Spinner
                    android:id="@+id/spinnerOpyt"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/textData"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/holo_blue_light"/>

                <View
                    android:id="@+id/viewData"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/spinnerOpyt"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/textViewVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewData"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Видео"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000" />

                <ListView
                    android:id="@+id/listViewVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textViewVideo"/>

                <EditText
                    android:id="@+id/editTextVideo"
                    android:layout_width="match_parent"
                    android:hint="video code"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/listViewVideo"
                    android:layout_toStartOf="@+id/btnAddVideoUrl"
                    android:layout_toLeftOf="@+id/btnAddVideoUrl"/>
                <Button
                    android:id="@+id/btnAddVideoUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/listViewVideo"
                    android:text="AddVideoUrl"
                    android:layout_alignRight="@+id/imageViewProfile"
                    android:layout_alignEnd="@+id/imageViewProfile"/>

                <View
                    android:id="@+id/viewVideo"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/btnAddVideoUrl"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewVideo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="Стоимость"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/editTextOt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/editTextDo"
                    android:layout_toLeftOf="@+id/textView5"
                    android:layout_toStartOf="@+id/textView5"
                    android:ems="10"
                    android:hint="От"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/editTextDo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/textView7"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/textView5"
                    android:layout_toRightOf="@+id/textView5"
                    android:ems="10"
                    android:hint="До"
                    android:inputType="number" />

                <View
                    android:id="@+id/viewPrice"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/editTextDo"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />


                <TextView
                    android:id="@+id/textViewComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewPrice"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="О себе"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/editTextComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewComment"
                    android:layout_marginTop="10dp"
                    android:hint="О себе" />

                <View
                    android:id="@+id/viewComment"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/editTextComment"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />


                <TextView
                    android:id="@+id/textViewContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/viewComment"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Контактные данные"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/editTextContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textViewContact"
                    android:layout_marginTop="10dp"
                    android:inputType="phone"
                    android:hint="Контакт" />

                <View
                    android:id="@+id/viewContact"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/editTextContact"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/darker_gray" />

                <Button
                    android:id="@+id/buttonSend"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/viewContact"
                    android:layout_marginTop="10dp"
                    android:background="@android:color/holo_blue_light"
                    android:text="Сохранить"
                    android:textColor="#fff" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="edit photo"
                    android:id="@+id/buttonEditPhoto"
                    android:layout_alignBottom="@+id/imageViewProfile"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Button"
                    android:id="@+id/button3"
                    android:layout_below="@+id/imageViewProfile"
                    android:layout_alignRight="@+id/imageViewProfile"
                    android:layout_alignEnd="@+id/imageViewProfile" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>